<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magecom_Singularis::magecom" title="Magecom main menu" sortOrder="10" >
                    <resource id="Magecom_Singularis::records_content" title="Records" sortOrder="10" >
                        <resource id="Magecom_Singularis::records" title="All records" sortOrder="20" />
                        <resource id="Magecom_Singularis::configuration_menu" title="Configuration" sortOrder="30" />
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magecom_Singularis::magecom_section" title="Magecom section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>